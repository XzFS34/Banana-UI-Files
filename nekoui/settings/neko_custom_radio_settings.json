{
  "namespace": "anjim",
  
  "world_type": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
        {
          "world_type": {
            "type": "stack_panel",
            "size": [ "100%", "100%" ],
            "orientation": "horizontal",
            "controls": [
              {
                "flat@world_section.commonx_panel": {
                  "anchor_from": "center",
                  "anchor_to": "center",
                  "controls": [
                    {
                      "flat_world_type_toggle@commonx.radio_with_label": {
                        "size": [ "100% - 1px", "100%" ],
                      //  "$ukuran_icon_radio": [ "100% - 2px", "40px" ],
                        "$icon_untuk_radio": "textures/neko/flat_world_icon",
                        "$toggle_state_binding_name": "#world_type_radio_flat",
                        "$radio_label_text": "generator.flat"
                      }
                    }
                  ]
                }
              },
              {
                "infinite@world_section.commonx_panel": {
                  "anchor_from": "center",
                  "anchor_to": "center",
                  "controls": [
                    {
                      "infinite_world_type_toggle@commonx.radio_with_label": {
                        "size": [ "100% - 1px", "100%" ],
                   //     "$ukuran_icon_radio": [ "100% - 2px", "40px" ],
                        "$icon_untuk_radio": "textures/neko/infinite_world_icon",
                        "$toggle_state_binding_name": "#world_type_radio_infinite",
                        "$radio_label_text": "generator.infinite"
                      }
                    }
                  ]
                }
              },
               /*Uncomment when Large Biome and Amplified world types are implemented
              {
                "large_biomees_world_type_toggle@commonx.radio_with_label": {
                  "size": [ "100%", "30px" ],
                  "$toggle_state_binding_name": "#world_type_radio_large_biomees",
                  "$radio_label_text": "generator.largeBiomes"
                }
              },
              {
                "amplified_world_type_toggle@commonx.radio_with_label": {
                  "size": [ "100%", "30px" ],
                  "$toggle_state_binding_name": "#world_type_radio_amplified",
                  "$radio_label_text": "generator.amplified"
                }
              },*/
              {
                "old_world_type_toggle@commonx.radio_with_label": {
                  "ignored": "( $is_publish )",
                "size": [ "fill", "100%" ],
                "$icon_untuk_radio": "textures/neko/old_world_icon",
                "$toggle_state_binding_name": "#world_type_radio_old",
                "$radio_label_text": "generator.old"
             }
          }
        ]
      }
    }
  ]
},

