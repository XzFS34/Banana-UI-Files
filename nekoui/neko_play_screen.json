                "controls": [
                  {
                    "uwu": {
                      "type": "stack_panel",
                      "size": [ "100%", "100%" ],
                      "orientation": "horizontal",
                      "controls": [
                        {
                          "panel_content_button@play_ui.panel_content_button": { "controls": [ { "common_back_button@neko_c.common_back_button": {}}]}
