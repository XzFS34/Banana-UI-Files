    "$glyph_texture": "textures/neko/glyph_icon/language_glyph",
    "$glyph_color_texture": "textures/neko/glyph_icon/language_glyph_color",
    "$glyph_size": [ 18, 18 ],
    "$button_text": "options.language",
    "$toggle_property_bag": {
      "#panel_title": "options.language"
